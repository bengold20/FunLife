<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="*"
    tools:context="com.make.sixFunction.tableDTBQT.TableDTBQTActivity">

    <TableRow android:background="@drawable/colorful">

        <TextView
            android:height="50dp"
            android:gravity="center"
            android:textColor="@color/ben_orange"
            android:text="Động từ nguyên mẫu"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:height="50dp"
            android:gravity="center"
            android:textColor="@color/ben_yellow"
            android:text="Quá khứ"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:height="50dp"
            android:textColor="@color/ben_green"
            android:gravity="center"
            android:text="Quá khứ phân từ"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:height="50dp"
            android:textColor="@color/Blue_Green"
            android:gravity="center"
            android:text="Nghĩa động từ"
            android:textSize="12dp"
            android:textStyle="bold" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:background="@drawable/colorful1"
            android:id="@+id/rcv_tableDTBQT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</TableLayout>