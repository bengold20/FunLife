<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.make.onBoardingScreen.OnBoardingFragment1">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_boarding2"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/ic_rabbit" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_title_bd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="OnBoarding1"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_content_bd2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="OnBoarding "
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="italic" />


</LinearLayout>