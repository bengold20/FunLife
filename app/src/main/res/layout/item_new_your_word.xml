<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_purple_conner_10"
    android:weightSum="3">

    <TableRow
        android:layout_height="65dp"
        android:gravity="center">

        <TextView
            android:id="@+id/txt_newYourWord"
            android:layout_weight="3"
            android:text="newWord"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txt_translater"
            android:layout_weight="3"
            android:text="newWord"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txt_meanning"
            android:layout_weight="3"
            android:text="newWord"
            android:textSize="14sp"
            android:textStyle="italic" />

        <ImageButton
            android:id="@+id/imgbtn_UpdateNewYourWord"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_orange_conner_60"
            android:src="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/imgbtn_deleteNewYourWord"
            android:layout_width="5dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/bg_orange_conner_60"
            android:src="@drawable/ic_delete" />


    </TableRow>

    <TableRow android:gravity="center">

    </TableRow>

</TableLayout>