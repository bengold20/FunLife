<!-- activity_screen_slide.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:background="@drawable/colorful2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_time" />

            <TextView
                android:id="@+id/txt_timeExamTest"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/ben_Magenta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_checkAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_green"
            android:text="kiểm tra"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_checkScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_green"
            android:text="Xem Điểm"
            android:visibility="gone" />

    </LinearLayout>

<androidx.viewpager.widget.ViewPager
    android:background="@drawable/colorful"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pagerExamText"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</LinearLayout>